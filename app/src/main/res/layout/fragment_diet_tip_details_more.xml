<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ksu.katara.healthymealplanner.screens.main.tabs.home.diettips.DietTipDetailsMoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/foundationOfHealthyLifestyleTitleTextView"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space"
            android:text="@string/foundation_of_healthy_lifestyle_title" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/foundationOfHealthyLifestyleRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                tools:itemCount="20"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_diet_tip" />

            <ProgressBar
                android:id="@+id/foundationOfHealthyLifestyleProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/green"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/foundationOfHealthyLifestyleTryAgainContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/failed_to_load_diet_tips" />

                <Button
                    android:id="@+id/foundationOfHealthyLifestyleTryAgainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/try_again" />

            </LinearLayout>

            <TextView
                android:id="@+id/noFoundationOfHealthyLifestyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_diet_tips"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/nutritionRiskFactorInDevelopmentOfDiseaseTitleTextView"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space"
            android:text="@string/nutrition_risk_factor_in_development_of_disease_title" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nutritionRiskFactorInDevelopmentOfDiseaseRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                tools:itemCount="20"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_diet_tip" />

            <ProgressBar
                android:id="@+id/nutritionRiskFactorInDevelopmentOfDiseaseProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/green"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/nutritionRiskFactorInDevelopmentOfDiseaseTryAgainContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/failed_to_load_diet_tips" />

                <Button
                    android:id="@+id/nutritionRiskFactorInDevelopmentOfDiseaseTryAgainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/try_again" />

            </LinearLayout>

            <TextView
                android:id="@+id/noNutritionRiskFactorInDevelopmentOfDiseaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_diet_tips"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/restorationOfDigestiveTractTitleTextView"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space"
            android:text="@string/restoration_of_digestive_tract_title" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:layout_marginTop="@dimen/medium_space">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restorationOfDigestiveTractRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                tools:itemCount="20"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_diet_tip" />

            <ProgressBar
                android:id="@+id/restorationOfDigestiveTractProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/green"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/restorationOfDigestiveTractTryAgainContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/failed_to_load_diet_tips" />

                <Button
                    android:id="@+id/restorationOfDigestiveTractTryAgainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/try_again" />

            </LinearLayout>

            <TextView
                android:id="@+id/noRestorationOfDigestiveTractTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_diet_tips"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>