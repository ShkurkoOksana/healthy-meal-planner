<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/tabsFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.TabsFragment"
        tools:layout="@layout/fragment_tabs" >
        <action
            android:id="@+id/action_tabsFragment_to_dietTipDetailsFragment"
            app:destination="@id/dietTipDetailsFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_dietTipDetailsMoreFragment"
            app:destination="@id/dietTipDetailsMoreFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_mealPlanFragment"
            app:destination="@id/mealPlanFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />
    </fragment>
    <fragment
        android:id="@+id/dietTipDetailsFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.diettips.DietTipDetailsFragment"
        tools:layout="@layout/fragment_diet_tip_details">
        <argument
            android:name="diet_tip_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/dietTipDetailsMoreFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.diettips.DietTipDetailsMoreFragment"
        android:label="Полезные советы"
        tools:layout="@layout/fragment_diet_tip_details_more">
        <action
            android:id="@+id/action_dietTipDetailsMoreFragment_to_dietTipDetailsFragment"
            app:destination="@id/dietTipDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealPlanFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.mealplan.MealPlanFragment"
        android:label="fragment_meal_plan"
        tools:layout="План питания" />
    <fragment
        android:id="@+id/recipeFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.recipe.RecipeFragment"
        android:label="Рецепт"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="recipe_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.mealplanfortoday.addrecipe.AddRecipeFragment"
        android:label="Добавить рецепт"
        tools:layout="@layout/fragment_add_recipes" >
        <argument android:name="meal_type"
            app:argType="ksu.katara.healthymealplanner.model.meal.enum.MealTypes" />
    </fragment>
    <fragment
        android:id="@+id/recipesFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.mealplanfortoday.MealPlanForTodayRecipesFragment"
        android:label="{meal_type}"
        tools:layout="@layout/item_meal_plan_for_today_recipe" >
        <action
            android:id="@+id/action_recipesFragment_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment" />
        <action
            android:id="@+id/action_recipesFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
        <argument
            android:name="meal_type"
            app:argType="ksu.katara.healthymealplanner.model.meal.enum.MealTypes" />
    </fragment>
</navigation>
