<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/tabsFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" >
        <action
            android:id="@+id/action_tabsFragment_to_dietTipDetailsFragment"
            app:destination="@id/dietTipDetailsFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_mealPlanFragment"
            app:destination="@id/mealPlanFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_dietTipDetailsMoreFragment"
            app:destination="@id/dietTipDetailsMoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/dietTipDetailsFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.diettips.DietTipDetailsFragment"
        android:label="Полезные советы"
        tools:layout="@layout/fragment_diet_tip_details">
        <argument
            android:name="diet_tips_chapter"
            app:argType="string" />
        <argument
            android:name="diet_tip_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/mealPlanFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.mealplan.MealPlanFragment"
        android:label="Meal plan fragment" />
    <fragment
        android:id="@+id/dietTipDetailsMoreFragment"
        android:name="ksu.katara.healthymealplanner.screens.main.tabs.home.diettips.DietTipDetailsMoreFragment"
        android:label="Полезные советы"
        tools:layout="@layout/fragment_diet_tip_details_more">
        <action
            android:id="@+id/action_dietTipDetailsMoreFragment_to_dietTipDetailsFragment"
            app:destination="@id/dietTipDetailsFragment" />
    </fragment>
</navigation>
